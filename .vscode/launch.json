    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nest.js: debug server-side",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            // "remoteRoot": "/backend/backend", 
        },
        {
            // "preLaunchTask": "Client Build",
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome Incognito",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/frontend",
            "userDataDir": "${workspaceFolder}/.chrome",
            "runtimeExecutable": "stable",
            "runtimeArgs": ["--incognito"]
        }
